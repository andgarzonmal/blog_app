<div class="user-show-container">
  <div class="user">
    <img src="<%= @user.photo %>" alt="User-photo" class="user-photo">
    <div class="user-info">
      <h1><%= @user.name%></h1>
      <p class="posts-number">Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <section >
    <div class="user-bio">
      <h2>Bio</h2>
      <p> <%=@user.bio%> </p>
    <div>

    <% @last_3_posts.each_with_index do |post, i| %>
      <div class="last-posts">
        <div class="user-info">
          <%= link_to user_post_path(params[:id], post.id), {:class => "3-post-link"} do %>
            <h3>Post <%=i+1%> </h3>
          <% end %>
          <p> <%=post.text%> </p>
          <div>
            <p> Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%> </p>
          </div>
        </div>
      </div>
    <% end %>
  </section>
  <%= link_to user_posts_path(@user), {:class => "3-post-link"} do %>
    <h3>See all posts </h3>
  <% end %>
<div>
